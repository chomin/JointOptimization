{
    "name": "JointOprimization",
    "n_gpu": 2,

    "arch": {
        "type": "PreActResNet34",
        "args": {}
    },
    "data_loader": {
        "type": "CIFAR10DataLoader",
        "args":{
            "data_dir": "~/data/",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.08,
            "momentum": 0.9,
            "weight_decay": 1e-4
        }
    },
    "train_loss": "mycriterion",
    "val_loss": "cross_entropy",
    "metrics": [
        "my_metric", "my_metric2"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true,
        "mlflow": true
    }
}
